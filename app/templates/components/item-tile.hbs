<div class="item">
  <li>
    {{#link-to 'itemDetail' item}}
      <h4>{{item.name}}</h4>
    {{/link-to}}
    <h5>{{item.typeDetail}} {{item.type}} - ${{item.price}}</h5>
    <br>
    <p>{{item.details}}</p>
    <br>
    <img src="{{item.image}}" alt="{{item.detail}}"/>
  </li>
  <button class="add-item" {{action 'addToCart' item}}>Add to Cart</button>
  <hr>
</div>
