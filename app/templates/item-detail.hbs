<div class="item-detail">
  <h1>{{model.name}}</h1>
  <h2>{{model.typeDetail}} {{model.type}}</h2>
  <button class='btn' {{action 'addToCart' model}}>add to cart</button>
  <img src="{{model.image}}">
  <p>{{model.details}}</p>
  {{new-review item=model saveReview="saveReview"}}
  <hr>
  {{review-tile item=model}}
</div>
